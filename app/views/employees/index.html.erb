<p id="notice"><%= notice %></p>

<h1>Employees</h1>
<br/>
<br/>
<table class="table table-striped table table-hover table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.Name %></td>
        <td><%= employee.Age %></td>
        <td><%= employee.Gender %></td>
        <td><%= employee.Designation %></td>
        <td><%= link_to 'View', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a New Employee', new_employee_path, class:"btn btn-outline-primary" %>
